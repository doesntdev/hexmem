# HexMem Configuration
# Copy to .env and fill in values

# Database
DATABASE_URL=postgres://hexmem:hexmem_dev@localhost:5433/hexmem

# Server
PORT=3400
NODE_ENV=development

# Dev auth bypass (set any value to use as API key in development)
HEXMEM_DEV_KEY=hexmem_dev_key

# Embedding provider: 'gemini' (default), 'openai', 'ollama'
EMBEDDING_PROVIDER=gemini

# Gemini (default embedding provider)
GEMINI_API_KEY=

# OpenAI (optional, if EMBEDDING_PROVIDER=openai)
OPENAI_API_KEY=

# Ollama (optional, if EMBEDDING_PROVIDER=ollama)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=nomic-embed-text
